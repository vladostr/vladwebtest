pipeline {
    agent any
    stages {
        stage('Example Build') {
            when { branch 'master' }
            steps {
                echo 'Hello, Maven'
                sh 'mvn --version'
            }
        }
        stage('Example Test') {
            when { branch 'master' }
            steps {
                echo 'Hello, JDK'
                sh 'java -version'
            }
        }
    }
}