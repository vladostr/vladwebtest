pipeline {
    agent any
    tools{
			maven '/opt/apache-maven-3.5.4'
			jdk 'myJDK-1.8'
			git 'git'
		 }
    stages {
        stage('Example Build') {
            when { branch 'master' }
            steps {
                echo 'Hello, Maven'
                sh 'mvn --version'
            }
        }
        stage('Example Test') {
            when { branch 'master' }
            steps {
                echo 'Hello, JDK'
                sh 'java -version'
            }
        }
    }
}